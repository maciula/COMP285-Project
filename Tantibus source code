//https://www.youtube.com/playlist?list=PLJOUQy9-kHFdOHHA5TlHsBSuMfPwkML1g good tutorial
public class Board extends BasicGame {
	
	private Image potato = null;
	private Image backGround = null;
	private SpriteSheet piece = null;
	
	public Board(String title){
		super (title);
		
	}
	public void init(GameContainer arg0) throws SlickException {
		
		
		potato = new Image("Images/Character.jpg");
		backGround = new Image("Images/background_02.jpg");
		piece = new SpriteSheet(backGround, 50, 50);
	}
	
	public void update(GameContainer arg0, int arg1) throws SlickException {
	
		
	}
	
	public void render(GameContainer arg0, Graphics arg1) throws SlickException {
	
		
		piece.startUse();
		for (int x = 200; x< 400; x+=32){
			piece.getSubImage(1, 0).drawEmbedded(x, 200, 0, 0);
		}
		piece.endUse();
		
		potato.draw (100, 100);
		
	}

	
}

